<view class="addr">收货地址：{{address || '请手动填写'}}</view>

<view class="items" wx:for="{{items}}" wx:key="index">
  <image class="thumb" src="{{item.carImage}}"/>
  <view>
    <view>{{item.carTitle}}</view>
    <view>¥{{item.carPrice}} × {{item.carNum}}</view>
  </view>
</view>

<view class="remark">
  <text>备注</text>
  <textarea placeholder="例如：要礼盒包装" bindinput="onRemark" value="{{remark}}"/>
</view>

<view class="bar">
  <text>总价 ¥{{amount}}</text>
  <button type="primary" bindtap="pay">前往支付</button>
</view>
